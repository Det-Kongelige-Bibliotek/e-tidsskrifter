    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= t '.classic_dialog_title' %></h4>
      </div>
      <div class="modal-body">
        <%= t '.classic_dialog_text' %>
      </div>
      <div class="modal-footer">

        <a class="btn btn-default" href="<%= t '.classic_link'%>&reason=option1"><%= t '.classic_dialog_option1' %></a>
        <a class="btn btn-default" href="<%= t '.classic_link'%>&reason=option2"><%= t '.classic_dialog_option2' %></a>
        <a class="btn btn-default" href="<%= t '.classic_link'%>&reason=option3"><%= t '.classic_dialog_option3' %></a>

      </div>
    </div><!-- /.modal-content -->
