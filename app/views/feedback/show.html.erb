
<div class="container">
 <div class="btn-toolbar">
  <% if (params[:system]) && (params[:system].include? 'primo') %>
    <a class="btn btn-primary col-md-offset-4" target="_blank" href="<%= t '.ebook_download_help_link' %>"><%= t '.ebook_download_help' %></a>
  <% end %>

  <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#help-form">
    <%= t '.title' %>
  </button>
 </div>
  <div id="help-form" class="collapse">
  <span class="help-block">
    <%= t '.help_text' %>
  </span>
  <form class="form-horizontal" role="form" method="post">
  <input type="hidden" name="id" value="<%=params[:id] %>"/>
  <input type="hidden" name="system" value="<%=params[:system] %>"/>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label"><%= t '.your_name' %></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name">
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label"><%= t '.your_email' %></label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email" name="email">
    </div>
  </div>

  <div class="form-group">
    <label for="comments" class="col-sm-2 control-label"><%= t '.your_comments' %></label>
    <div class="col-sm-10">
        <textarea id="comments" name="comments" class="form-control" rows="5"></textarea>
    </div>
   </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary"><%=t '.send' %></button>
    </div>
  </div>
</form>
</div>
</div>